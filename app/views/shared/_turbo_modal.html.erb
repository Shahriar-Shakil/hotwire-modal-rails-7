<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "turbo-modal", action: "turbo:submit-end->turbo-modal#submitEnd keyup@window->turbo-modal#closeWithKeyboard " },class:"fixed inset-0 z-50 flex items-center justify-center" do %>
    <!-- Backdrop -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity ease-out duration-300" aria-hidden="true"></div>
    <!-- Modal Box with Transitions -->
    <div class="relative transform transition-all ease-out duration-300 opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 modal-enter">
      <div class="bg-white px-4 pb-4 pt-5 rounded-lg shadow-xl sm:my-8 !w-[500px]  sm:p-6">
        <div>
          <div class="mt-3 sm:mt-5">
            <% if defined?(title) && title.present? %>
              <h3 class="text-base font-semibold leading-6 text-gray-900" id="modal-title"><%= title %></h3>
            <% end %>
            <div class="mt-2">
              <%= yield if block_given? %>
            </div>
          </div>
        </div>
        <div class="mt-5 sm:mt-6">
          <%= button_tag "Close", data: { action: "turbo-modal#hideModal" }, type: "button", class: "mt-4 rounded-lg py-3 px-5 bg-red-600 text-white" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>